<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> | Blog</title>
    <style>
      .blog-cover {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      }

      .author-info img {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 12px;
      }

      .comment-box img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 10px;
      }

      pre {
        white-space: pre-wrap;
        word-wrap: break-word;
        font-family: "Roboto", sans-serif;
        font-size: 1rem;
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1 class="mb-3 text-center"><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        alt="Blog Image"
        class="blog-cover mb-4"
      />

      <pre><%= blog.body %></pre>

      <div class="mt-4 d-flex align-items-center author-info">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="Author" />
        <strong><%= blog.createdBy.fullName %></strong>
      </div>
    </div>

    <div class="container mt-5">
      <h3>Comments (<%= comments.length %>)</h3>

      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post" class="mt-3">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Write a comment..."
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </form>
      <% } else { %>
      <p class="theme-muted">Please sign in to comment.</p>
      <% } %>

      <div class="mt-4">
        <% comments.forEach(comment => { %>
        <div class="d-flex align-items-start mb-3 comment-box">
          <img src="<%= comment.createdBy.profileImageURL %>" alt="User" />
          <div>
            <strong><%= comment.createdBy.fullName %></strong>
            <div><%= comment.content %></div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
